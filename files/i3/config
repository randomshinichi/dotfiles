# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.config/i3/i3status.conf
}

# mouse behaviour should be traditional
focus_follows_mouse no

# Thinkpad audio keys
bindcode 121 exec pamixer -t
bindcode 122 exec pamixer -d 10
bindcode 123 exec pamixer -i 10
bindcode 198 exec quodlibet --run  # --run starts quodlibet only if no existing process exists
bindcode 173 exec --no-startup-id quodlibet --previous
bindcode 172 exec --no-startup-id quodlibet --play-pause
bindcode 171 exec --no-startup-id quodlibet --next

# Brightness controls
bindcode 232 exec --no-startup-id xbacklight -dec 20
bindcode 233 exec --no-startup-id xbacklight -inc 20

# Fn-F3 to screen lock
bindcode 160 exec physlock

# ThinkVantage button turns screen off
bindcode 156 exec xset dpms force off

# wallpaper
exec_always --no-startup-id feh --bg-fill "/home/shinichi/Pictures/Simon Stalenhag/peripheral1_1920.jpg" # always runs when you restart i3

# redshift
exec --no-startup-id redshift-gtk

# udiskie, an automounter with tray icon
exec --no-startup-id udiskie -t

# syndaemon turns off the touchpad while I'm typing.
# turn it on 0.3s after the last keypress; ignore modifier key combos; use XRecord instead of polling
exec --no-startup-id syndaemon -i 0.3 -K -R

# Utilities: manual management of external displays, quick unmount disks
set $dp DP-1
set $lvds LVDS-1-1
set $mode_utils (3) docked 3 monitors, (2) docked 2 monitors, (d) DP-1 and LVDS, (s) LVDS only, (e) eject block device, (p) screenshot to ~, (o) screenshot area to ~
mode "$mode_utils" {
    # arandr generated this incredible xrandr command... I had nothing to do with it.
    # n for docked mode, outputs to 3 monitors. Needs nvidia.
    bindsym 3 exec --no-startup-id xrandr --output VIRTUAL1 --off --output LVDS-1-2 --off --output VGA-1-2 --off --output LVDS1 --mode 1920x1080 --pos 0x1080 --rotate normal --output DP-1-3 --mode 1920x1080 --pos 1144x0 --rotate normal --output DP-1-2 --mode 1280x1024 --pos 3064x0 --rotate normal --output DP-1-1 --off --output VGA1 --off
    bindsym 2 exec --no-startup-id xrandr --output VGA-1 --off --output LVDS-1-2 --off --output LVDS-1 --primary --mode 1920x1080 --pos 0x1080 --rotate normal --output VGA-1-2 --off --output DP-1-3 --mode 1920x1080 --pos 0x0 --rotate normal --output DP-1-2 --off --output DP-1-1 --off
    bindsym d exec --no-startup-id xrandr --output VIRTUAL1 --off --output LVDS-1-2 --off --output VGA-1-2 --off --output LVDS1 --primary --mode 1920x1080 --pos 312x1440 --rotate normal --output DP-1-3 --off --output DP-1-2 --off --output DP-1-1 --mode 2560x1440 --pos 0x0 --rotate normal --output VGA1 --off
    bindsym s exec --no-startup-id xrandr --output VGA-1 --off --output LVDS-1-2 --off --output LVDS-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output VGA-1-2 --off --output DP-1-3 --off --output DP-1-2 --off --output DP-1-1 --off
    bindsym e exec i3-input -F 'exec udiskie-umount /dev/%s' -P 'Eject /dev/'
    bindsym p exec --no-startup-id scrot -e 'mv $f ~'
    bindsym --release o exec --no-startup-id import ~/screenshot.png  # release is needed for import to grab the key here
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the utils selection menu
bindsym $mod+x mode "$mode_utils"

# move workspaces between xrandr outputs
bindsym $mod+Ctrl+Shift+Left move workspace to output left
bindsym $mod+Ctrl+Shift+Right move workspace to output right
bindsym $mod+Ctrl+Shift+Up move workspace to output up
bindsym $mod+Ctrl+Shift+Down move workspace to output down

# Scratchpad feature
bindsym $mod+Shift+slash move scratchpad
bindsym $mod+slash scratchpad show

# Startup applications
exec emacs

