# redshift
exec --no-startup-id redshift-gtk

# udiskie, an automounter with tray icon
exec --no-startup-id udiskie -t

# syndaemon turns off the touchpad while I'm typing.
# turn it on 0.3s after the last keypress; ignore modifier key combos; use XRecord instead of polling
exec --no-startup-id syndaemon -i 0.3 -K -R

# Utilities
set $mode_utils (l) lock, (o) screen off (e) eject block device, (p) screenshot to ~, (a) screenshot area to ~
mode "$mode_utils" {
    bindsym e exec ~/.config/i3/eject.sh
    bindsym p exec --no-startup-id scrot -e 'mv $f ~'
    bindsym l exec physlock
    bindsym o exec xset dpms force off
    bindsym --release a exec --no-startup-id import ~/screenshot.png  # release is needed for import to grab the key here
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the utils selection menu
bindsym $mod+x mode "$mode_utils"

